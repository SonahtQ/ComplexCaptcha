{
	"compilerOptions": {
		"target": "ES2018",

		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,

		"allowJs": false,

		"removeComments": true,
		"declaration": true,
		"inlineSourceMap": true,

		"outDir": "./dist/",

		"forceConsistentCasingInFileNames": true,

		"strict": true,

		"skipLibCheck": true
	},

	"include": [
		"./index.ts",
		"./examples/*"
	]
}
